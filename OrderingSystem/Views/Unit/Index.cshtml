@model IEnumerable<OrderingSystem.Models.Unit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UnitType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UnitId" class="btn btn-secondary">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.UnitId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
